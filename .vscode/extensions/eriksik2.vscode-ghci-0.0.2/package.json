{
	"name": "vscode-ghci",
	"displayName": "Integrated Haskell Shell",
	"description": "Adds an integrated Haskell interactive shell to vscode that automatically reloads on file changes.",
	"version": "0.0.2",
	"publisher": "eriksik2",
	"icon": "grafx/main_icon.png",
	"repository": "https://gitlab.com/eriksik2/vscode-ghci.git",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other",
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:haskell"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "haskellShell.openPrompt",
				"title": "Open interactive shell",
				"category": "Haskell",
				"icon": {
					"dark": "grafx/start_shell.png",
					"light": "grafx/start_shell.png"
				}
			},
			{
				"command": "haskellShell.closePrompt",
				"title": "Close interactive shell",
				"category": "Haskell",
				"icon": {
					"dark": "grafx/stop_shell.png",
					"light": "grafx/stop_shell.png"
				}
			},
			{
				"command": "haskellShell.togglePrompt",
				"title": "Toggle interactive shell",
				"category": "Haskell",
				"icon": {
					"dark": "grafx/toggle_shell.png",
					"light": "grafx/toggle_shell.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == haskell",
					"command": "haskellShell.togglePrompt",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == haskell",
					"command": "haskellShell.openPrompt",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "haskellShell.openPrompt",
					"when": "resourceLangId == haskell"
				},
				{
					"command": "haskellShell.closePrompt",
					"when": "resourceLangId == haskell"
				},
				{
					"command": "haskellShell.togglePrompt",
					"when": "resourceLangId == haskell"
				}
			]
		},
		"configuration": {
			"title": "Integrated Haskell Shell",
			"properties": {
				"haskellShell.ghci.executablePath": {
					"type": "string",
					"format": "uri",
					"default": "ghci",
					"description": "Path to the ghci executable to use."
				},
				"haskellShell.ghci.arguments": {
					"type": "array",
					"default": [],
					"description": "Arguments passed to the ghci executable."
				},
				"haskellShell.ghci.customPrompt": {
					"type": "string",
					"default": "Haskell Interactive Shell ({file}) \\x03BB ",
					"markdownDescription": "Use a custom prompt string. Substitution variables: `{dir}` and `{file}` are the directory and filename of the loaded source file. `{line}` is the current line number of the input prompt, and `{modules}` lists the loaded modules."
				},
				"haskellShell.experimental.enablePromptCoupling": {
					"type": "boolean",
					"default": "true",
					"description": "Only show a ghci instance when its corresponding source file is focused in the editor."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/string-format": "^2.0.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"string-format": "^2.0.0"
	},
	"__metadata": {
		"id": "1bb53a67-e606-4116-baf8-3d325f92d3df",
		"publisherId": "ce5cca32-954b-4ac8-931d-0e68f110702a",
		"publisherDisplayName": "Erik Sik",
		"targetPlatform": "undefined",
		"isApplicationScoped": false,
		"updated": false,
		"isPreReleaseVersion": false,
		"installedTimestamp": 1679908495377,
		"preRelease": false
	}
}